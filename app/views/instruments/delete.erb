<h2>Are you sure you want to delete this instrument?</h2>

<table style="width:100%">

  <tr>
    <th>Type</th>
    <th>Make</th>
    <th>Model</th>
    <th>Status</th>
    <th>Status Comments</th>
  </tr>
  <tr>
    <td><%= @instrument.type_of %></td>
    <td><%= @instrument.make %></td>
    <td><%= @instrument.model %></td>
    <td><%= @instrument.status %></td>
    <td><%= @instrument.status_comments %></td>
  </tr>

</table><br />

<form method="POST" action="/instruments/<%= @instrument.id %>">
  <input type="hidden" id="hidden" name="_method" value="delete" />
  <input type="submit" value="Delete Instrument" />
</form>
<p><a href="/instruments/index">Back To Instruments</a></p>
